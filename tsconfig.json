{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "jsx": "react",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noEmit": false,
    "lib": ["webworker", "es7", "dom"],
    "baseUrl": "./src"
  },
  "files": ["dev-tools/graphql.d.ts"],
  "exclude": ["dist", "static", "node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
